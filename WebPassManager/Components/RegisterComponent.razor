
@if(isLoggedIn)
{
    <CascadingValue Value = "users[users.Count()-1].UserName" Name="userName">
        <CascadingValue Value="_passwords" Name="passwords">
            <CascadingValue Value = "users[users.Count()-1].Id" Name="userID">
                <TableComponent />
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
}
else if(toLogin)
{
    <CascadingValue Value = "_users" Name = "users">
        <LoginComponent />
    </CascadingValue>
}
else if(invalidInput)
{
    <MudText Typo = "Typo.h1" Style="top: 50%; left 45%">USERNAME IS ALREADY TAKEN</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" @onclick="goBack">GO BACK</MudButton>
}

else if(showForm)
{
    <div style="width: 550px; position: absolute;top 40%;left: 45%; padding: 40px;">
        <MudText Typo="Typo.h4" Style="color: white; margin-bottom: 7px" Align="Align.Center"><strong>Register</strong></MudText>
        <EditForm Model="@newUser" OnValidSubmit="@TransferUser">
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Username" Class="mt-3"
                                @bind-Value="newUser.UserName" For="@(() => newUser.UserName)" />
                    <MudText Typo="Typo.subtitle1" Style="color: white" Align="Align.Center" ><strong>Register</strong></MudText>
                    <MudTextField Label="Password" HelperText="Enter your password" Class="mt-3"
                                @bind-Value="newUser.PassWord" For="@(() => newUser.PassWord)" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick">Whatever</MudTextField>
                    <MudTextField Label="Repeat Password" HelperText="Repeat Password!" Class="mt-3"
                                @bind-Value="newUser.RepeatPassWord" For="@(() => newUser.PassWord)" InputType="@PasswordInput" />
                </MudCardContent>
                <MudButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary" @onclick = "goLogin">Existing User? Login Now!</MudButton>
                <MudCardActions Align = "Align.Center">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" Align="Align.Center">Submit</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </div>
}

